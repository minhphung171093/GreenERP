<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
    
<!-- Mô Tả -->
		<record id="mo_ta_task_form" model="ir.ui.view">
            <field name="name">mo.ta.task.form</field>
            <field name="model">mo.ta.task</field>
            <field name="arch" type="xml">
                <form string="Mô Tả" version="7.0">
                	<sheet>
               		<group>
               			<field name="name"/>
               		</group>
               		</sheet>
                    <footer>
                        <button name="bt_luu" string="Lưu" type="object" class="oe_highlight"/>
                        <button name="bt_hoanthanh" string="Hoàn Thành" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>        
        <record id="action_mo_ta_task_form" model="ir.actions.act_window">            
            <field name="name">Mô Tả</field>         
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mo.ta.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mo_ta_task_form"/>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>