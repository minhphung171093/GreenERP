    <data>
    
        <record model="ir.ui.view" id="bien_ban_tree">
            <field name="name">bien.ban.tree</field>
            <field name="model">bien.ban</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Tree biên bản">
                    <field name="don_vi_id" />
                    <field name="quyen_bb" />                    
                    <field name="so_bb" />
                    <field name="can_bo_lap_id" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="bien_ban_form">
            <field name="name">bien.ban.form</field>
            <field name="model">bien.ban</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="form Bien ban" version="7.0">
                    <header>
                    		<button name="luu_k" string="Nhập Mới" />
                    		<button name="luu_k" string="Lưu" />
                    		<button name="luu_k" string="Sửa" />
                    		<button name="luu_k" string="In QD" />
                    		<button name="luu_k" string="In Thông Báo" />
                    		<button name="luu_k" string="Tước GPLX" />
                    		<button name="luu_k" string="Tạm Giữ TVPT" />
                    		<button name="luu_k" string="Thu TVPT" />
                    		<button name="luu_k" string="Cập Nhật" />
                    		<button name="luu_k" string="Thoát" />
                    </header>
                    <sheet>
                    	<group col="4"  string="Lập Biên Bản Vi Phạm - Ra Quyết Định Xử  Phạt">
                    		<field name="so_bb" />
                    		<field name="quyen_bb" />
                    		<field name="can_bo_lap_id" on_change="onchange_can_bo_lap(can_bo_lap_id)"/>
                    		<field name="don_vi_id" />
                    		<field name="cap_bac" />
                    	</group>
                    	<group col="4">
                    		<group col="1">
                        		<field name="lap_luc" widget="float_time" on_change="onchange_lap_luc(lap_luc)"/>
                        	</group>
                        	<group col="1">
                        		<field name="lap_ngay"  on_change="onchange_lap_ngay(lap_ngay)"/>
                        	</group>
                        	<group col="1">
                        		<field name="lap_tai"  on_change="onchange_lap_tai(lap_tai)"/>
                        	</group>
                        	<group col="1">
                        		<field name="lap_duong"  on_change="onchange_lap_duong(lap_duong)"/>
                        	</group>
                    	</group>
                    	<group col="4">
                    		<group col="1">
                        		<field name="vp_luc" widget="float_time"/>
                        	</group>
                        	<group col="1">
                        		<field name="vp_ngay" />
                        	</group>
                        	<group col="1">
                        		<field name="vp_tai" />
                        	</group>
                        	<group col="1">
                        		<field name="vp_duong" />
                        	</group>
                    	</group>
                    	<group col="4">
                    		<group col="1" colspan="2">
                        		<field name="ten_vp" on_change="onchange_doi_tuong_vp(ten_vp)"/>
                        	</group>
                        	<group col="2" colspan ="1">
                        		<field name="sinh_ngay" />
                        		<field name="quoc_tich_id" />
                        	</group>
                    	</group>
                    	<group col="4" colspan="1">
                    		<group col="1">
	                    		<field name="cmnd_hc" />
                    		</group>
                    		<group col="1">
	                    		<field name="ngay_ccmnd" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="noi_cmnd" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="nghe_nghiep" />
	                    	</group>	
                    	</group>
                    	<group col="4">
                    			<field name="noi_o" />
                    			<field name="quan_huyen" nolabel="1"/>
                    	</group>
                    	<group col="5" colspan="1">
                    		<group col="1">
	                    		<field name="bien_so"  on_change="onchange_bien_so(bien_so)"/>
                    		</group>
                    		<group col="1">
	                    		<field name="loai_xe" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="nhan_hieu" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="nghi_dinh" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="nd_nghi_dinh"/>
	                    	</group>
                    	</group>
                    	<group col="4">
                    		<group col="2">
	                    		<field name="ma_loi" on_change="onchange_vi_pham(ma_loi)"/>
	                    	</group>
	                    	<group col="1" colspan="2">
	                    		<field name="nd_loi" nolabel="1"/>
	                    	</group>
                    	</group>
                    	<field name="vi_pham_id" nolabel="1">
                    		<tree editable='top'>
	                    		<field name="nghi_dinh" />
	                    		<field name="name" />                
			                    <field name="noi_dung" />
	                    	</tree>
                    	</field>
                    	<group col="5">
                    		<group col="2" colspan="3">
	                    		<field name="nag_nhe" />
	                    	</group>
	                    	<group col="2">
	                    		<field name="tong_tien"/>
	                    	</group>
                    	</group>
                    	<group col="4">
                    		<group col="1">
	                    		<field name="hoi_lo" />
                    		</group>
                    		<group col="1">
	                    		<field name="hinh_phat" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="tam_giu" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="ngay_bd_tuoc" />
	                    	</group>	
                    	</group>
                    	<group col="6">
	                    		<field name="so_gp_id"  on_change="onchange_giay_phep(so_gp_id)"/>
	                    		<field name="hang_gp" />
	                    		<field name="tuoc_hang" />
	                    		<field name="ngay_cap_gp" />
	                    		<field name="thoi_han_gp"/>
	                    		<field name="noi_cap_gp"/>
                    	</group>
                    	<group col="3">
                    		<group col="1">
                    			<field name="nd_tam_giu" />
                    		</group>
                    		<group col="1">
                    			<field name="bo_sung" />
                    		</group>
                    		<group col="1">
                    			<field name="ngan_chan" />
                    		</group>
                    	</group>
                    	<group col="3">
                    		<group col="1">
                    			<field name="thoi_han_hq" />
                    		</group>
                    		<group col="1">
                    			<field name="kinh_phi_hq" />
                    		</group>
                    		<group col="1">
                    			<field name="in_tra_giay_to" />
                    		</group>
                    	</group>
                    	<group col="4">
                    		<group col="1">
	                    		<field name="can_bo_qd" on_change="onchange_can_bo_qd(can_bo_qd)"/>
	                    	</group>
	                    	<group col="1">
	                    		<field name="cap_ra_qd" />
                    		</group>
                    		
	                    	<group col="1">
	                    		<field name="cap_bac_qd" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="chuc_vu_qd" />
	                    	</group>	
                    	</group>
                    	<group col="5">
                    		<group col="1">
	                    		<field name="so_bien_lai" />
                    		</group>
                    		<group col="1">
	                    		<field name="ngay_dong_phat" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="ngay_ktll" />
	                    	</group>
	                    	<group col="1">
	                    		<button name="luu_k" string="Lưu K" />
	                    	</group>
	                    	<group col="1">
	                    		<field name="ngay_ra_qd" />
	                    	</group>	
                    	</group>
                    </sheet>
                </form>
            </field>
        </record>
       
